@model Feitico

@{
    ViewData["Title"] = "Cadastrar";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h1>Cadastro de Feitiço</h1>
        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-indigo btn-lg btn-block offset-md-7" asp-controller="feitico">
                Ir para o Livro de Feitiços
            </a>
        </div>
    </div>

    <alert mensagem="@TempData["msg"]"></alert>

    <form asp-action="cadastrar">
        <partial name="_Form" />
        <confirm></confirm>
    </form>
</div>
