@model Feitico

@{
    ViewData["Title"] = "Editar";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h1>Edição de Feitiços</h1>
        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-indigo btn-lg btn-block offset-md-7" asp-controller="feitico">
                Ir para o Livro de Feitiços
            </a>
        </div>
    </div>

    <form asp-action="editar">

        <partial name="_Form"/>

        <confirm texto="Editar"></confirm>
    </form>
</div>