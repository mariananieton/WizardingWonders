@model List<Feitico>

@{
    ViewData["Title"] = "Index ";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h1>Livro de Feitiços</h1>
        </div>
        <div class="col-md-6">
            <a asp-action="cadastrar" class="btn btn-indigo btn-lg btn-block offset-md-7" asp-controller="feitico">
                Cadastrar novo Feitiço
            </a>
        </div>
    </div>

    <alert mensagem="@TempData["msg"]"></alert>

    <table class="table">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Nível de Dificuldade</th>
            <th>Tipo</th>
            <th>Data da Descoberta</th>
            <th>Varinha</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>@item.NivelDificuldade</td>
                <td>@item.Tipo</td>
                <td>@item.DataDescoberta.ToShortDateString()</td>
                <td>@(item.Varinha ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="editar" asp-route-id="@item.Id" class="btn btn-sm btn-slate-blue">Editar</a>
                    <button onclick="key.value = @item.Id" type="button" class="btn btn-magenta btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Remover
                    </button>
                </td>
            </tr>
        }
    </table>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-bg">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirmação</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Deseja realmente apagar esse feitiço?
            </div>
            <div class="modal-footer">
                <form asp-action="excluir">
                    <input type="hidden" name="id" id="key"/>
                    <button type="button" class="btn btn-slate-blue" data-bs-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-magenta btn-danger">Sim</button>
                </form>
            </div>
        </div>
    </div>
</div>